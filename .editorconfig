# http://editorconfig.org

root = true

# General settings for whole project
[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.bat]
indent_style = tab
end_of_line = crlf

[LICENSE]
insert_final_newline = false

# Format specific overrides
[*.md]
trim_trailing_whitespace = false

[client/**.less]
indent_style = space
indent_size = 2

[client/**.js]
indent_style = space
indent_size = 2

[client/**.jsx]
indent_style = space
indent_size = 2

[client/**.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8
